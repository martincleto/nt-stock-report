{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "compiled",
    "rootDir": "./",
    "strict": true,
    "sourceMap": true,
    "target": "es2018",
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "./jest-setup.ts"
  ]
}
