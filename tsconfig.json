{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "compiled",
    "paths": {
      "@appconfig": ["src/config"],
      "@apptypes": ["src/types"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@ui/*": ["src/ui/*"],
    },
    "rootDir": "./",
    "strict": true,
    "sourceMap": true,
    "target": "es2018",
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "./jest-setup.ts"
  ]
}
